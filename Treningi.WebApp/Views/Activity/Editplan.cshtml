@model IEnumerable<Treningi.WebApp.ActivityVM>
<html>
<p>
    <a asp-action="Create">Create New</a>
</p>
<body>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Dzień
                </th>
                <th>
                    Godzina
                </th>
                <th>
                    Nazwa ćwiczenia
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.day)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.hour)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.exercise)
                </td>
                <td>
                    @Html.ActionLink("Delete   ", "Delete", new { id = item.ID })
                </td>
            </tr>
            }
        </tbody>
    </table>
</body>
</html>